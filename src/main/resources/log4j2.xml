<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</Pattern>
            </PatternLayout>
        </Console>

        <!-- File Appender for Application Logs -->
        <File name="AppLogFile" fileName="logs/application.log" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} - %level - %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>

        <!-- File Appender for Error Logs -->
        <File name="ErrorLogFile" fileName="logs/error.log" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} - %level - %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers>
        <!-- Root Logger: Logs to both console and file -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AppLogFile"/>
        </Root>

        <!-- Logger for Error Logs -->
        <Logger name="org.springframework.web" level="error" additivity="false">
            <AppenderRef ref="ErrorLogFile"/>
        </Logger>
    </Loggers>
</Configuration>
